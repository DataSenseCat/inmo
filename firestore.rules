
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access to collections needed for the public site
    match /properties/{document=**} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can write
    }

    match /developments/{document=**} {
      allow read: if true;
      allow write: if request.auth != null; 
    }
    
    match /agents/{document=**} {
        allow read: if true;
        allow write: if request.auth != null;
    }

    match /testimonials/{document=**} {
        allow read: if true;
        allow write: if request.auth != null;
    }

    match /siteConfig/{document=**} {
        allow read: if true;
        allow write: if request.auth != null;
    }

    // Allow anyone to create a lead (for contact forms)
    match /leads/{document=**} {
      allow read: if request.auth != null;
      allow create: if true;
      allow update, delete: if request.auth != null;
    }

    // Default deny for any other collection
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
