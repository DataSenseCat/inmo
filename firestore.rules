rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow anyone to read these collections, but only logged-in users to write
    match /properties/{propertyId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /developments/{devId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /agents/{agentId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
     match /testimonials/{testimonialId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Site config should be world-readable
    match /siteConfig/main {
       allow read: if true;
       allow write: if request.auth != null;
    }

    // Anyone can create a lead
    match /leads/{leadId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }

    // Admins collection should not be client-accessible for reads or writes
    match /admins/{adminId} {
        allow read, write: if false;
    }
  }
}
