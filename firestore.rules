
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Permite el acceso de lectura y escritura a todos los documentos
    // para cualquier usuario que haya iniciado sesión (autenticado).
    // Esto es útil para un panel de administración donde el acceso ya está controlado.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
