rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Admins collection can only be read and written by authenticated users (the admin).
    match /admins/{adminId} {
      allow read, write: if request.auth != null;
    }

    // Leads can only be created by anyone, but only read by authenticated users.
    match /leads/{leadId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }

    // All other collections are publicly readable, but only writable by authenticated users.
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
